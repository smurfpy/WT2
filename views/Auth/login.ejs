<header>
  <title>Login</title>
  
</header>

<%- include('../layouts/navbar') %>
<br><br><br><br>
<div id = "content" class="container ">
  <div class="card text shadow">
      <div class="card-header text-center">
        <h2>Login</h2>
      </div>
      <div class="card-body">
        <form action="/auth/login" method="post" class="lg-form">
              <div class="form-group">
                <label for="exampleInputEmail1">Email address</label>
                <input  class="form-control" type="text"name="email" id="email" aria-describedby="emailHelp"  placeholder="Enter email" value="<%= locals.email ? email : '' %>"/>
                <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
              </div>
              <div class="form-group">
                <label for="password">Password</label>
                <input class="form-control" type="password" name="password" id="password" placeholder="Password"/>
              </div>
              <br>
              <button input type="submit" value="Login" class="btn btn-secondary">Login</button>
        </form>
      </div>
      <div class="card-footer text-muted">
        Don't have an account? <span><a href="/auth/register">Register</a></span>
      </div>
  </div>
</div>

<%- include('../layouts/footer') %>
