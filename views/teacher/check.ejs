<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    
    <style>
        .bd-placeholder-img {
            font-size: 1.125rem;
            text-anchor: middle;
            -webkit-user-select: none;
            -moz-user-select: none;
            user-select: none;
        }

        @media (min-width: 768px) {
            .bd-placeholder-img-lg {
                font-size: 3.5rem;
            }
            
        }
    </style>

    <link rel='stylesheet' href='stylesheets/home.css' />
    <link rel='stylesheet' href='stylesheets/compiler_line.css' />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.5.0/Chart.min.js"></script>
    <title>Home</title>
</head>

<body>
    <!-- Narbar-->
    <%- include('../layouts/navbar') %>
    <!-- end of Narbar-->

<br><br><br>
    <div class="container-fluid">
<form action="/check/submit" method="post" autocomplete="off" >
<input type="hidden" id="idStudent" name="idStudent" value="<%= student[0]._id %>">

        <div class="row align-items-start">
            <div class="col-8">
                <h1>Student answer
                    <button type="button"  class="btn btn-outline-dark " data-bs-toggle="modal" data-bs-target="#staticBackdrop2">
                        ทดสอบโค้ด
                    </button>
                </h1>
                
            </div>
            <div class="col-2"></div>
            <div class="col-1">
                <h1>
                    <button type="submit"  class="btn btn-outline-success " >
                        ส่งคะแนน
                    </button>
                </h1>
            </div>
        </div>
        <%# START %> 
        <div class="card bg-light  shadow">
            <div class="card-header">
                <b> <%= student[0].contentName %> </b>  
            </div>
            <div class="card-body">
                <% if(student[0] === "null" ){ %>
                    ไม่มีคำตอบจากผู้เรียน
                        
                    <% } else { %>
                        <div class="row align-items-start">
                            <div class="col">
                                <div class="input-group mb-3">
                                    <span class="input-group-text"><b>EMAIL</b></span>
                                    <span class="input-group-text text-uppercase"><%= student[0].email %> </span>
                                </div>
                                <div class="input-group mb-3">
                                    <span class="input-group-text"><b>เวลาที่ส่ง</b></span>
                                    <span class="input-group-text text-uppercase"><%= student[0].times %></span>
                                </div>
                            </div>
                            <div class="col">
                                <div class="input-group mb-3">
                                    <span class="input-group-text"><b>ครั้งที่ทำ</b></span>
                                    <span class="input-group-text text-uppercase"><%= student[0].timetodo %></span>
                                </div>
        
                                <% if(student[0].contentName.substr(student[0].contentName.length - 5) === "-Quiz" ){ %>
                                    <div class="input-group mb-3">
                                        <span class="input-group-text" id="basic-addon1">คะแนน</span>
                                        <input class="form-control" type="number" name="studentScore" placeholder="0-40" aria-label="default input example" min="0" max="40"required >
                                    </div>
                                        
                                    <% } else { %>
                                        <div class="input-group mb-3">
                                            <span class="input-group-text" id="basic-addon1">คะแนน</span>
                                            <div class="form-control form-check-inline">
        
                                                <div class="container">
                                                    <div class="row">
                                                      <div class="col-3">
                                                        <div class="form-check form-check-inline">
                                                            <input class="form-check-input" type="checkbox" id="inlineCheckbox1" name="studentScoreProject1" value=1>
                                                            <label class="form-check-label" for="inlineCheckbox1">ผลลัพธ์</label>
                                                        </div>
                                                      </div>
                                                      <div class="col-3">
                                                        <div class="form-check form-check-inline">
                                                            <input class="form-check-input" type="checkbox" id="inlineCheckbox1" name="studentScoreProject2" value=1>
                                                            <label class="form-check-label" for="inlineCheckbox1">เงื่อนไข1</label>
                                                        </div>
                                                      </div>
                                                      <div class="col-3">
                                                        <div class="form-check form-check-inline">
                                                            <input class="form-check-input" type="checkbox" id="inlineCheckbox1" name="studentScoreProject3" value=1>
                                                            <label class="form-check-label" for="inlineCheckbox1">เงื่อนไข2</label>
                                                        </div>
                                                      </div>
                                                      <div class="col-3">
                                                        <div class="form-check form-check-inline">
                                                            <input class="form-check-input" type="checkbox" id="inlineCheckbox1" name="studentScoreProject4" value=1>
                                                            <label class="form-check-label" for="inlineCheckbox1">เงื่อนไข3</label>
                                                        </div>
                                                      </div>
                                                    </div>
                                                </div>
                                            </div>
                                            
                                        </div>
                                <% } %>
        
                            </div>
        
                            
                            <div class="input-group mb-3">
                                <span class="input-group-text"><b>โจทย์</b></span>
                                <span class="input-group-text text-uppercase"><%= student[0].lv4Content %></span>
                            </div>
                        </div>
                        <div class="form-group" >
                            <textarea style="height: 400px; background-color: #cacdcf;" class="form-control" id="lineCounter" readonly rows="10"> </textarea>
                            <textarea style="height: 400px;" class="form-control" id="code" name="code" rows="10" ><%= student[0].code %></textarea>
                        </div>
                        <div class="card-body shadow rounded">
                            <span ><b>Output :</b></span>
                            <textarea style="height: 100%" class="form-control" id="code" name="code" rows="10" ><%= student[0].output %></textarea>
                        </div>
                    
                <% } %>
                
            </div>
        </div><br>
        <%# END %> 

    </div>

</form> 
<br>

<!-- Modal CODE -->        
<div class="modal fade" id="staticBackdrop2" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="staticBackdropLabel">Online compiler</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
            <iframe src="https://www.programiz.com/c-programming/online-compiler/" width="100%" height="500px"></iframe>
        </div>   

        <div class="modal-footer">
        <button type="button" class="btn btn-danger btn-lg btn-block" data-bs-dismiss="modal">ปิด</button>
        </div>
    </div>
    </div>
</div>
<br>

<script src="javascripts/compilerStyle.js"></script>
</body>

</html>